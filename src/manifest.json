{
    "manifest_version": 3,
    "name": "GitHub Go to Fork",
    "version": "1.0.0",
    "description": "Shows a link to your forked repository when viewing the upstream repository",
    "permissions": [ "storage" ],
    "host_permissions": [
        "https://api.github.com/*",
        "https://github.com/*"
    ],
    "content_scripts": [
        {
            "matches": [ "https://github.com/*" ],
            "js": [ "content.js" ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}
